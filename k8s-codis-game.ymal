apiVersion: v1
kind: Service
metadata:
  name: codis-dashboard
  namespace: game 
spec:
  ports:
    - name: dashboard
      port: 18087
  selector:
      app: codis-dashboard
      product: "game"
  type: NodePort
---
apiVersion: v1
kind: ReplicationController
metadata:
  name: codis-dashboard
  namespace: game 
spec:
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: codis-dashboard
        product: "game"
    spec:
      volumes:
        - name: data
          emptyDir: {}
      containers:
        - name: dashboard
          image: reg.local:5000/codis-dashboard:latest
          ports:
            - containerPort: 18087
          env:
            - name: PRODUCT
              value: "game"
#          env:
