#              value: /opt/codis
#            - name: CODIS_CONF
#              value: /opt/codis/conf/config.ini
#          command:
#            - /opt/codis/bin/codis-config 
#            - -c /opt/codis/conf/config.ini
#            - slot init
#            - -f

#            - initslot start
#          - cd $CODIS_HOME/bin
#          ./codis-config -c $CODIS_CONF slot init -f
---
apiVersion: v1
kind: ReplicationController
metadata:
  name: codis-master-g1
  namespace: game 
spec:
#  labels:
#    app: codis-master
#    group: "1" 
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: codis-master
        group: "1" 
        product: "game"
    spec:
      volumes:
       - name: data
         hostPath: 
           path: /opt/codis_data/master
      containers:
        - name: codis-master
          env:
            - name: GROUP
              value: "1"
            - name: PRODUCT
              value: "game"
          image: reg.local:5000/codis-server:latest
          volumeMounts:
             - mountPath: /mnt
               name: data 
          ports:
             - containerPort: 6380
               name: redis 
---
apiVersion: v1
kind: Service
metadata:
  name: codis-master-g1
  namespace: game 
spec:
spec:
  ports:
    - name: redis
      port: 6380
  selector:
    app: codis-master
    group: "1"
    product: "game"
---
apiVersion: v1
kind: ReplicationController
metadata:
  name: codis-slave-g1
  namespace: game 
spec:
#  labels:
#    app: codis-slave
#    group: "1"
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: codis-slave
        group: "1" 
        product: "game"
    spec:
      volumes:
       - name: data
         hostPath: 
           path: /opt/codis_data/slave
      containers:
        - name: codis-slave
          env:
            - name:  GROUP
              value: "1"
            - name: PRODUCT
              value: "game"
          image: reg.local:5000/codis-server:latest
          volumeMounts:
             - mountPath: /mnt
               name: data 
          ports:
             - containerPort: 6380
               name: redis 
---

